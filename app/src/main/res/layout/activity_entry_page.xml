<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECDDC6"
    tools:context=".EntryPageActivity">


    <ImageView
        android:id="@+id/ic_arrow_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_blackarrow_back"
        tools:ignore="contentDescription"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ic_check"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_gradient"
        android:text="SAVE"
        android:fontFamily="@font/intel"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/dim_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#80000000"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/mood_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_speech_bubble"
            android:padding="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="170dp"
            android:visibility="gone"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How's your day?"
                android:textColor="@color/black" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2">

                <ImageView
                    android:id="@+id/emoji_happy"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/emoji_happy"
                    android:layout_margin="6dp" />

                <ImageView
                    android:id="@+id/emoji_love"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/emoji_love"
                    android:layout_margin="6dp" />

                <ImageView
                    android:id="@+id/emoji_sad"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/emoji_sad"
                    android:layout_margin="6dp" />

                <ImageView
                    android:id="@+id/emoji_shock"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/emoji_shock"
                    android:layout_margin="6dp" />

                <ImageView
                    android:id="@+id/emoji_cry"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/emoji_cy"
                    android:layout_margin="6dp" />

                <ImageView
                    android:id="@+id/embed_angry"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/emoji_angry"
                    android:layout_margin="6dp" />
            </GridLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <EditText
        android:id="@+id/note_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:textSize="25sp"
        android:textColor="#863B17"
        android:textColorHint="#863B17"
        android:fontFamily="@font/intel"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="#ECDDC6"
        android:padding="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <ImageView
        android:id="@+id/emoji_default"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/emoji_happy"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RelativeLayout
        android:id="@+id/container_relative"
        android:layout_width="360dp"
        android:layout_height="500dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <EditText
        android:id="@+id/note_body"
        android:layout_width="360dp"
        android:layout_height="500dp"
        android:autofillHints="Write Here"
        android:hint="@string/write_note"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:fontFamily="@font/regular"
        android:padding ="15dp"
        android:textColorHint="#863B17"
        android:textColor="#863B17"
        android:background="#ECDDC6"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor" />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            />
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="150dp"
            android:layout_height="100dp"
            />
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="150dp"
            android:layout_height="100dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_edit"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:weightSum="4"
        android:background="@drawable/bg_bottom_entry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/edit_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:maxHeight="30dp"
            android:maxWidth="30dp"
            android:layout_margin="4dp"
            android:src="@drawable/image" />

        <ImageView
            android:id="@+id/edit_star"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:maxHeight="30dp"
            android:maxWidth="30dp"
            android:layout_margin="4dp"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:maxHeight="30dp"
            android:maxWidth="30dp"
            android:layout_margin="4dp"
            android:src="@drawable/text" />

        <ImageView
            android:id="@+id/edit_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:maxHeight="30dp"
            android:maxWidth="30dp"
            android:layout_margin="4dp"
            android:src="@drawable/list" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/text_edit"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_layout_edit"
        android:elevation="20dp">
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_icons"
            android:weightSum="3"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/left_alignment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:maxHeight="30dp"
                android:maxWidth="30dp"
                android:layout_margin="4dp"
                android:src="@drawable/left_alignment" />
            <ImageView
                android:id="@+id/justify_alignment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:maxHeight="30dp"
                android:maxWidth="30dp"
                android:layout_margin="4dp"
                android:src="@drawable/justify_alignment" />

            <ImageView
                android:id="@+id/right_alignment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:maxHeight="30dp"
                android:maxWidth="30dp"
                android:layout_margin="4dp"
                android:src="@drawable/right_alignment" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:weightSum="3"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:maxHeight="30dp"
                android:maxWidth="30dp"
                android:layout_margin="4dp"
                android:src="@drawable/bold_text_icon" />
            <ImageView
                android:id="@+id/italic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:maxHeight="30dp"
                android:maxWidth="30dp"
                android:layout_margin="4dp"
                android:src="@drawable/italic_text_icon" />

            <ImageView
                android:id="@+id/underline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:maxHeight="30dp"
                android:maxWidth="30dp"
                android:layout_margin="4dp"
                android:src="@drawable/underline_text_icon" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:weightSum="3"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/black"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_margin="40dp"
                android:src="@drawable/color_black" />

            <ImageView
                android:id="@+id/brown"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_margin="20dp"
                android:src="@drawable/color_brown" />

            <ImageView
                android:id="@+id/pink"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_margin="40dp"
                android:src="@drawable/color_pink" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_sticker"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_layout_edit"
        android:elevation="20dp">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:weightSum="2"
            android:padding="5dp"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/kiss"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/kiss"/>

            <ImageView
                android:id="@+id/bunny"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/bunny"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:weightSum="2"
            android:padding="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/sunglasses"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/sunglasses"/>

            <ImageView
                android:id="@+id/car"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/car"/>

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>